@using Junko.Domain.ViewModels.Common
@model PagingViewModel

<ul class="pagination">
    @if (Model.StartPage < Model.CurrentPage)
    {
        <li class="cursor-pointer"><a onclick="FillPageId(@(Model.CurrentPage - 1))">«</a></li>
    }

    @for (int i = Model.StartPage; i <= Model.EndPage; i++)
    {
        <li class="@(Model.CurrentPage == i ? "active":"") cursor-pointer"><a onclick="FillPageId(@i)">@i<span class="sr-only">(current)</span></a></li>
    }

    @if (Model.EndPage > Model.CurrentPage)
    {
        <li class="cursor-pointer"><a onclick="FillPageId(@(Model.CurrentPage + 1))">»</a></li>
    }
</ul>