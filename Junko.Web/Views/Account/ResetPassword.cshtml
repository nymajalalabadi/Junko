@using Junko.Domain.ViewModels.Account
@model ResetPasswordDTO

@{
    ViewData["Title"] = "فراموشی کلمه ی عبور";
}


<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="index.html">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>@ViewData["Title"]</h2>
                    <form asp-controller="Account" asp-action="ResetPassword" method="post">
                        <partial name="_CaptchaInput" />

                        <input type="hidden" asp-for="ActiveCode" />

                        <p>
                            <label>رمز عبور<span>*</span></label>
                            <input type="text" asp-for="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </p>

                        <p>
                            <label>تکرار رمز عبور<span>*</span></label>
                            <input type="text" asp-for="RePassword">
                            <span class="text-danger" asp-validation-for="RePassword"></span>
                        </p>

                        <div class="login_submit">
                            <button type="submit">بازیابی</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>

@section scripts
{
    <partial name="_JqueryValidators" />
    <partial name="_CaptchaScripts" />
}
